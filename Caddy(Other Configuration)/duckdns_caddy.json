      "certificates": {
        "automate": ["*.example.com"] //自动化管理 TLS 证书（包括自动申请与更新证书）。修改为自己的通配符域名。
      },
      "automation": {
        "policies": [{
          "issuers": [{
            "module": "acme",
            "email": "your@email.com", //修改为自己的电子邮箱，与下一致。（选配）
            "challenges": {
              "dns": {
                "provider": {
                  "name": "duckdns",
                  "api_token": "b8a33cc1-1111-2222-3333-b049bf07988f", //修改为自己 DuckDNS 的 API 令牌，与下一致。
                  "override_domain": "zz.duckdns.org" //修改为自己在 DuckDNS 中申请的免费 DDNS 域名（二级域名），与下一致。
                }
              }
            }
          },
          {
            "module": "acme",
            "ca": "https://acme.zerossl.com/v2/DV90",
            "email": "your@email.com", //修改为自己的电子邮箱，与上一致。（选配）
            "challenges": {
              "dns": {
                "provider": {
                  "name": "duckdns",
                  "api_token": "b8a33cc1-1111-2222-3333-b049bf07988f", //修改为自己 DuckDNS 的 API 令牌，与上一致。
                  "override_domain": "zz.duckdns.org" //修改为自己在 DuckDNS 中申请的免费 DDNS 域名（二级域名），与上一致。
                }
              }
            }
          }]
        }]
      }
    }
