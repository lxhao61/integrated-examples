//1、以反代或 REALITY Vision 为核心应用或 NaiveProxy/Trojan-Go 应用
//原配置：
//........<省略>........
    "tls": {
      "certificates": {
        "automate": ["h2y.example.com","cdn.example.com"] //自动化管理 TLS 证书（包括自动申请与更新证书）。修改为自己的域名。（域名名称与数量以实际为准）
      },
      "automation": {
        "policies": [{
          "issuers": [{
            "module": "acme",
            "email": "your@email.com" //修改为自己的电子邮箱，与下一致。（选配）
          },
          {
            "module": "acme",
            "ca": "https://acme.zerossl.com/v2/DV90",
            "email": "your@email.com" //修改为自己的电子邮箱，与上一致。（选配）
          }]
        }]
      }
    }
//........<省略>........

//以上配置修改为如下：
//........<省略>........
    "tls": {
      "certificates": {
        "load_files": [{
          "certificate": "/home/tls/h2y.example.com/h2y.example.com.crt", //修改为自己的证书，绝对路径。
          "key": "/home/tls/h2y.example.com/h2y.example.com.key" //修改为自己的密钥，绝对路径。
        },
        {
          "certificate": "/home/tls/cdn.example.com/cdn.example.com.crt", //修改为自己的证书，绝对路径。
          "key": "/home/tls/cdn.example.com/cdn.example.com.key" //修改为自己的密钥，绝对路径。
        }] //若使用通配符证书或 SAN 证书，合并一组即可。
      }
    }
//........<省略>........


//2、以回落/分流为核心应用
//原配置：
