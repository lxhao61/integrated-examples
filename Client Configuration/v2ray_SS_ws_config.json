{
  "log": {},
  "inbounds": [
    {
      "port": "1080",
      "protocol": "socks",
      "settings": {
        "auth": "noauth",
        "udp": true
      }
    },
    {
      "port": "1081",
      "protocol": "http",
      "settings": {}
    }
  ],
  "outbounds": [
    {
      "protocol": "shadowsocks",
      "settings": {
        "servers": [
          {
            "address": "xx.yy", //修改为服务端配置的对应域名
            "port": 443, //服务端配置的端口
            "method": "chacha20-poly1305", //修改为服务端配置的对应加密协议
            "password": "diy2008", //修改为服务端配置的对应密码
            "ota": false
          }
        ]
      },
      "streamSettings": {
        "security": "tls",
        "network": "ws",
        "wsSettings": {
          "path": "/8ALdGZ9k" //修改为服务端配置的对应path。大于Xray-core v1.4.0版本，path后加上?ed=2048即可开启WebSocket 0-RTT。
        },
        "tlsSettings": {
          "fingerprint": "chrome" //启用模拟Chrome指纹（V2Ray不支持，若使用V2Ray做客户端必须删除此项配置。）。可选firefox、chrome、safari、randomized（表示随机指纹）或为空（表示不启用指纹），强烈推荐启用。
        }
      },
      "mux": {
        "enabled": true, //ws类传输方式，建议开启。
        "concurrency": 4 //此数据根据网络情况调整。表示4条传输进程复合一个链路发出。
      }
    },
    {
      "tag": "direct", //如果要使用路由，这个tag是一定要有的，在这里direct就是freedom的一个标号。
      "protocol": "freedom",
      "settings": {}
    }
  ],
  "routing": {
    "domainStrategy": "IPOnDemand",
    "rules": [
      {
        "type": "field",
        "outboundTag": "direct", //与上tag对应
        "domain": ["geosite:cn"] //中国大陆主流网站的域名
      },
      {
        "type": "field",
        "outboundTag": "direct", //与上tag对应
        "ip": [
          "geoip:cn", //中国大陆的IP
          "geoip:private" //私有地址IP，如路由器等。
        ]
      }
    ]
  }
}
